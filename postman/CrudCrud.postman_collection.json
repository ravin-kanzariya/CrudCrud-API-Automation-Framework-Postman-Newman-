	"item": [
		{
			"name": "Create resource",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", () => {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"const res = pm.response.json();",
							"",
							"pm.test(\"Response has _id\", () => {",
							"    pm.expect(res._id).to.exist;",
							"});",
							"",
							"pm.environment.set(\"resourceId\", res._id);",
							"",
							"pm.test(\"deviceName is correct\", () => {",
							"    pm.expect(res.deviceName).to.eql(\"Smart Camera\");",
							"});",
							"",
							"pm.test(\"status is valid\", () => {",
							"    pm.expect([\"online\",\"offline\"]).to.include(res.status);",
							"});",
							"",
							"pm.test(\"Response time < 2s\", () => {",
							"    pm.expect(pm.response.responseTime).to.be.below(2000);",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"deviceName\": \"Smart Camera\",\n  \"location\": \"Warehouse A\",\n  \"status\": \"online\"\n}\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/{{token}}/{{resource}}",
