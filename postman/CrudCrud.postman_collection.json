							"pm.test(\"Response is array\", () => {",
							"    pm.expect(list).to.be.an(\"array\");",
							"});",
							"",
							"pm.test(\"At least one record exists\", () => {",
							"    pm.expect(list.length).to.be.greaterThan(0);",
							"});",
							"",
							"pm.test(\"Each record has _id\", () => {",
							"    list.forEach(item => {",
							"        pm.expect(item._id).to.exist;",
							"    });",
